---
const services = [
  {
    title: "Preventive Cardiology",
    description: "Comprehensive heart disease prevention through lifestyle modifications, risk assessment, and personalized treatment plans.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    title: "Diagnostic Testing",
    description: "State-of-the-art cardiac diagnostic services including ECG, stress testing, and advanced imaging techniques.",
    icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
  },
  {
    title: "Heart Disease Management",
    description: "Expert care for various heart conditions including coronary artery disease, heart failure, and arrhythmias.",
    icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
  },
  {
    title: "Consultations",
    description: "Personalized cardiac consultations with our experienced team of cardiologists.",
    icon: "M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
  }
];
---

<section id="services" class="py-20 bg-white">
  <div class="container mx-auto px-5 md:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-[#1a355e] mb-4">Our Services</h2>
      <p class="text-xl text-gray-600">Comprehensive cardiac care tailored to your needs</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="bg-white p-8 rounded-xl shadow-lg hover:shadow-xl transition-shadow border border-gray-100 group hover:border-[#b71c1c]">
          <div class="w-14 h-14 bg-[#b71c1c]/10 rounded-lg flex items-center justify-center mb-6 group-hover:bg-[#b71c1c]">
            <svg 
              xmlns="http://www.w3.org/2000/svg" 
              class="h-8 w-8 text-[#b71c1c] group-hover:text-white transition-colors" 
              fill="none" 
              viewBox="0 0 24 24" 
              stroke="currentColor"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d={service.icon}
              />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-[#1a355e] mb-4">{service.title}</h3>
          <p class="text-gray-600 leading-relaxed">{service.description}</p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a 
        href="tel:301-500-3055"
        class="inline-flex items-center bg-[#b71c1c] text-white px-8 py-3 rounded-full hover:bg-[#951616] transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        Schedule a Consultation
      </a>
    </div>
  </div>
</section> 