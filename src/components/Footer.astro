---
import logo from '../assets/logo.png';
import { contactInfo } from '../config/contact';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { name: "About Us", href: "#about" },
  { name: "Our Services", href: "#services" },
  { name: "Contact", href: "#contact" },
  { name: "Cookie Settings", href: "/cookies" },
];

const legalLinks = [
  { name: "Privacy Policy", href: "/privacy" },
  { name: "Terms of Service", href: "/terms" },
  { name: "Accessibility", href: "/accessibility" }
];

const socialLinks = [
  { 
    name: "Facebook",
    href: "https://facebook.com/heartconsultants",
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
    </svg>`
  },
  { 
    name: "Twitter",
    href: "https://twitter.com/heartconsultants",
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
    </svg>`
  },
  { 
    name: "LinkedIn",
    href: "https://linkedin.com/company/heartconsultants",
    icon: `<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
    </svg>`
  }
];

const locations = [contactInfo.locations.dc, contactInfo.locations.silverSpring];
---

<footer class="bg-[#1a355e] text-white pt-12 pb-6">
  <div class="container mx-auto px-5 md:px-8">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Logo and Description -->
      <div class="space-y-4">
        <img src={logo.src} alt="Heart Consultants" class="h-16 brightness-0 invert" />
        <p class="text-gray-300 text-sm">
          Providing exceptional cardiac care with advanced diagnostic and treatment options in Silver Spring, MD and Washington, DC.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4 pt-4">
          {socialLinks.map(social => (
            <a 
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-white transition-colors"
              aria-label={`Follow us on ${social.name}`}
            >
              <Fragment set:html={social.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-gray-300 hover:text-white transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Locations -->
      <div class="md:col-span-2">
        <h3 class="text-lg font-semibold mb-4">Our Locations</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {locations.map(location => (
            <div>
              <p class="font-medium">{location.name}</p>
              <p class="text-sm text-gray-300">
                {location.address.street}, {location.address.suite}
              </p>
              <p class="text-sm text-gray-300">
                {location.address.city}, {location.address.state} {location.address.zip}
              </p>
              <div class="mt-2 space-y-1">
                <p class="text-sm text-gray-300">
                  <span class="text-white">Appointments:</span> {location.phone.appointments}
                </p>
                <p class="text-sm text-gray-300">
                  <span class="text-white">General:</span> {location.phone.general}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-6 mt-8">
      <div class="grid md:grid-cols-2 gap-4 items-center">
        <div class="flex flex-wrap gap-4 text-sm text-gray-400">
          <span>© {currentYear} Heart Consultants, LLC.</span>
          <span class="hidden md:inline">|</span>
          {legalLinks.map((link, index) => (
            <>
              <a href={link.href} class="hover:text-white transition-colors">
                {link.name}
              </a>
              {index < legalLinks.length - 1 && <span class="hidden md:inline">·</span>}
            </>
          ))}
        </div>
        <div class="flex items-center justify-start md:justify-end space-x-4">
          <a href={`tel:${contactInfo.locations.dc.phone.general}`} class="text-sm text-gray-400 hover:text-white transition-colors">
            {contactInfo.locations.dc.phone.general}
          </a>
          <span class="text-gray-600">|</span>
          <a href={`mailto:${contactInfo.email}`} class="text-sm text-gray-400 hover:text-white transition-colors">
            {contactInfo.email}
          </a>
        </div>
      </div>
    </div>
  </div>
</footer> 