<div id="newBrandingModal" class="fixed inset-0 z-50 hidden">
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>
  
  <div class="fixed left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-lg">
    <div class="bg-white rounded-2xl shadow-2xl p-8 mx-4">
      <div class="relative">
        <!-- Close button -->
        <button 
          id="closeModal"
          class="absolute -right-2 -top-2 bg-white rounded-full p-1 shadow-lg hover:bg-gray-100"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Content -->
        <div class="text-center">
          <div class="w-16 h-16 bg-[#b71c1c]/10 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-[#b71c1c]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
          </div>
          
          <h2 class="text-2xl font-bold text-[#1a355e] mb-4">
            Welcome to Our New Look!
          </h2>
          
          <p class="text-gray-600 mb-6">
            We're excited to unveil our new brand identity! Experience our enhanced website designed to serve you better. Same exceptional cardiac care, with a fresh new appearance.
          </p>
          
          <button 
            id="exploreButton"
            class="bg-[#b71c1c] text-white px-8 py-3 rounded-full hover:bg-[#951616] transition-colors"
          >
            Explore Now
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Show modal after 3 seconds
  setTimeout(() => {
    const modal = document.getElementById('newBrandingModal');
    if (modal) modal.classList.remove('hidden');
  }, 3000);

  // Close modal handlers
  const closeModal = () => {
    const modal = document.getElementById('newBrandingModal');
    if (modal) modal.classList.add('hidden');
  };

  document.getElementById('closeModal')?.addEventListener('click', closeModal);
  document.getElementById('exploreButton')?.addEventListener('click', closeModal);
</script> 