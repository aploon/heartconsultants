---
const contactInfo = {
  address: "123 Cardiology Lane, Suite 100, Silver Spring, MD 20910",
  phone: "301-500-3055",
  email: "info@heartconsultants.com",
  hours: "Monday - Friday: 8:00 AM - 5:00 PM"
};
---

<section id="contact" class="py-20 bg-gradient-to-br from-gray-100 to-gray-200">
  <div class="container mx-auto px-5 md:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-[#1a355e] mb-4">Contact Us</h2>
        <p class="text-xl text-gray-600">We're here to help with your cardiac care needs</p>
      </div>

      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
        <div class="grid md:grid-cols-2 gap-12">
          <div class="space-y-8">
            <div>
              <h3 class="text-xl font-semibold text-[#1a355e] mb-2">Visit Us</h3>
              <p class="text-gray-600">{contactInfo.address}</p>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-[#1a355e] mb-2">Office Hours</h3>
              <p class="text-gray-600">{contactInfo.hours}</p>
            </div>

            <div>
              <h3 class="text-xl font-semibold text-[#1a355e] mb-2">Contact Information</h3>
              <div class="space-y-4">
                <a href={`tel:${contactInfo.phone}`} class="flex items-center text-gray-600 hover:text-[#b71c1c]">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  {contactInfo.phone}
                </a>
                <a href={`mailto:${contactInfo.email}`} class="flex items-center text-gray-600 hover:text-[#b71c1c]">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  {contactInfo.email}
                </a>
              </div>
            </div>
          </div>

          <div class="relative h-64 md:h-full min-h-[300px]">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24934.14066563966!2d-77.03246287137573!3d38.99535056407569!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b7c8b5186c4b89%3A0x45e82125a11f3b9c!2sSilver%20Spring%2C%20MD!5e0!3m2!1sen!2sus!4v1647894787788!5m2!1sen!2sus"
              class="absolute inset-0 w-full h-full rounded-lg"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 